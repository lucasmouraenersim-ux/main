# Configuração de Ambiente para WRF
# Edite este arquivo e depois execute: source config.env

# Diretórios de instalação do WRF e WPS
export WRF_DIR=/home/ubuntu/WRF
export WPS_DIR=/home/ubuntu/WPS

# Número de processadores para usar
export NPROCS=4

# Diretório de dados geográficos
export WPS_GEOG=/home/ubuntu/WPS_GEOG

echo "✓ Variáveis de ambiente configuradas:"
echo "  WRF_DIR = $WRF_DIR"
echo "  WPS_DIR = $WPS_DIR"
echo "  NPROCS = $NPROCS"
echo "  WPS_GEOG = $WPS_GEOG"
